<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yupi.springbootinit.mapper.OrePledgeMapper">
    <!-- 查询当天的数据 -->
    <select id="selectTodayData" resultType="com.yupi.springbootinit.model.entity.OrePledge">
        SELECT * FROM ore_pledge
        WHERE DATE(create_time) = CURDATE();
    </select>
    <!-- 查询精确数据 -->
    <select id="selectDataExactlyAgo" resultType="com.yupi.springbootinit.model.entity.OrePledge">
        SELECT * FROM ore_pledge
        WHERE DATE(create_time) = DATE(#{exactDate});
    </select>
</mapper>

